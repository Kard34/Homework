#include <stdio.h>
#include <string.h>
#include <ctype.h>

int position(char *arr, char x)
{
    for (int i = 0; i < strlen(arr); i++)
        if (arr[i] == x)
            return i;
    return -1;
}

void translate(char str[])
{
    char Ato9[] = "ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890";
    char *morsecode[] = {".-", "-...", "-.-.", "-..", ".", "..-.", "--.", "....", "..", ".---", "-.-", ".-..", "--", "-.", "---", ".--.", "--.-", ".-.", "...", "-", "..-", "...-", ".--", "-..-", "-.--", "--..", ".----", "..---", "...--", "....-", ".....", "-....", "--...", "---..", "----.", "-----"};
    for (int i = 0; i < strlen(str); i++)
    {
        int x = position(Ato9, toupper(str[i]));
        if (x != -1)
            printf("%s ", morsecode[x]);
    }
}

