#include <stdio.h>

int main()
{
    int n;
    scanf("%d", &n);
    for (int i = 0; i < n * 2 - 1; i++)
    {
        for (int j = 0; j < n * 2 - 1; j++)
        {
            if (i == 0 || i == n * 2 - 2 || i == j || (i < j && j < n * 2 - 1 - i) || (i > j && j > n * 2 - 3 - i))
            {
                printf("*");
            }
            else
                printf(" ");
        }
        printf("\n");
    }
    return 0;
}
